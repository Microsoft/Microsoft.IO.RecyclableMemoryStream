<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFrameworks>netstandard1.4;net40;net45</TargetFrameworks>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
  </PropertyGroup>
  <!-- for assembly signing we use a magic variable coupled with a special build definition which skips UTs -->
  <PropertyGroup Condition="'$(DelaySignKeyFile)' != ''">
    <DefineConstants>$(DefineConstants);NOFRIENDASSEMBLY</DefineConstants>
    <AssemblyOriginatorKeyFile>$(DelaySignKeyFile)</AssemblyOriginatorKeyFile>
    <DelaySign>true</DelaySign>
    <SignAssembly>true</SignAssembly>
  </PropertyGroup>
  <PropertyGroup Condition="'$(Configuration)|$(TargetFramework)|$(Platform)'=='Release|netstandard1.4|AnyCPU'">
    <DocumentationFile>bin\Release\netstandard1.4\Microsoft.IO.RecyclableMemoryStream.xml</DocumentationFile>
  </PropertyGroup>
  <PropertyGroup Condition="'$(Configuration)|$(TargetFramework)|$(Platform)'=='Release|net40|AnyCPU'">
    <DocumentationFile>bin\Release\net40\Microsoft.IO.RecyclableMemoryStream.xml</DocumentationFile>
  </PropertyGroup>
  <PropertyGroup Condition="'$(Configuration)|$(TargetFramework)|$(Platform)'=='Release|net45|AnyCPU'">
    <DocumentationFile>bin\Release\net45\Microsoft.IO.RecyclableMemoryStream.xml</DocumentationFile>
  </PropertyGroup>
</Project>
